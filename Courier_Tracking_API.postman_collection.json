{
	"info": {
		"_postman_id": "courier-tracking-api",
		"name": "Courier Tracking API",
		"description": "Complete API collection for the Courier Tracking Backend system",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"phone\": \"+1234567890\",\n  \"password\": \"password123\",\n  \"role\": \"customer\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/register",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "register"]
						}
					}
				},
				{
					"name": "Login User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/login",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "login"]
						}
					}
				}
			]
		},
		{
			"name": "Parcels",
			"item": [
				{
					"name": "Create Parcel (Customer)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{customer_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"recipientName\": \"Alice Johnson\",\n  \"recipientPhone\": \"+1234567890\",\n  \"pickupAddress\": \"123 Main St, City, State 12345\",\n  \"deliveryAddress\": \"456 Oak Ave, City, State 12345\",\n  \"parcelSize\": \"medium\",\n  \"parcelType\": \"package\",\n  \"weight\": 2.5,\n  \"paymentType\": \"cod\",\n  \"codAmount\": 25.00,\n  \"deliveryFee\": 15.00,\n  \"isFragile\": false,\n  \"requiresSignature\": true,\n  \"specialInstructions\": \"Handle with care\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/parcels",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "parcels"]
						}
					}
				},
				{
					"name": "Track Parcel (Public)",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{base_url}}/api/v1/parcels/track/{{tracking_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "parcels", "track", "{{tracking_id}}"]
						}
					}
				},
				{
					"name": "Get My Parcels (Customer)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{customer_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/parcels/my-parcels?page=1&limit=10",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "parcels", "my-parcels"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "10"
								}
							]
						}
					}
				}
			]
		},
		{
			"name": "Agents",
			"item": [
				{
					"name": "Create Agent (Admin)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{admin_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"userId\": \"{{user_id}}\",\n  \"vehicleType\": \"car\",\n  \"serviceAreas\": [\"Downtown\", \"Midtown\", \"Uptown\"],\n  \"status\": \"available\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/agents",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "agents"]
						}
					}
				},
				{
					"name": "Update Agent Location (Agent)",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{agent_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"latitude\": 40.7128,\n  \"longitude\": -74.0060,\n  \"address\": \"123 Main St, City, State 12345\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/agents/{{agent_id}}/location",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "agents", "{{agent_id}}", "location"]
						}
					}
				}
			]
		},
		{
			"name": "Payments",
			"item": [
				{
					"name": "Create Payment (Customer)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{customer_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"parcelId\": \"{{parcel_id}}\",\n  \"amount\": 25.00,\n  \"paymentType\": \"cod\",\n  \"currency\": \"USD\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/payments",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "payments"]
						}
					}
				}
			]
		},
		{
			"name": "Analytics",
			"item": [
				{
					"name": "Dashboard Analytics (Admin)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{admin_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/analytics/dashboard",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "analytics", "dashboard"]
						}
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:5000",
			"type": "string"
		},
		{
			"key": "admin_token",
			"value": "your-admin-jwt-token-here",
			"type": "string"
		},
		{
			"key": "customer_token",
			"value": "your-customer-jwt-token-here",
			"type": "string"
		},
		{
			"key": "agent_token",
			"value": "your-agent-jwt-token-here",
			"type": "string"
		},
		{
			"key": "user_id",
			"value": "user-object-id-here",
			"type": "string"
		},
		{
			"key": "parcel_id",
			"value": "parcel-object-id-here",
			"type": "string"
		},
		{
			"key": "agent_id",
			"value": "agent-object-id-here",
			"type": "string"
		},
		{
			"key": "tracking_id",
			"value": "TRK123456789ABC",
			"type": "string"
		}
	]
} 